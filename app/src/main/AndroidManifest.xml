<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.max.ombumobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuTecnico"
            android:label="Menu Técnico" />
        <activity
            android:name=".Menu"
            android:label="Menu" />
        <activity
            android:name=".Inventario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TicketsTecnico"
            android:label="Tickets Técnico" />
        <activity
            android:name=".EditarTicket"
            android:label="Editar Ticket" />
        <activity
            android:name=".BusquedaContactos"
            android:label="Contactos" />
        <activity
            android:name=".ResultadoContactos"
            android:label="Contactos" />
        <activity
            android:name=".TicketsUsuario"
            android:label="Tickets" />
        <activity
            android:name=".GeneracionTicketPaso1"
            android:label="Generación Ticket 1/3"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GeneracionTicketPaso2"
            android:label="Generación Ticket 2/3"
            android:screenOrientation="portrait" />
        <activity
            android:name=".GeneracionTicketPaso3"
            android:label="Generación Ticket 3/3"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".VerTicket"
            android:label="Ticket" />
    </application>

</manifest>